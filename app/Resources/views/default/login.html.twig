{% extends 'base.html.twig' %}
{% block title %}Login{% endblock %}
{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('assets/login/css/style.css') }}">
{% endblock %}
{% block body %}
	<div class="container">
		<section id="content">
			<form action="{{path('login_submit')}}" method="POST">
				<h1>Login</h1>
				<div>
					<input type="text" placeholder="Username" name="user" required="" id="username" />
				</div>
				<div>
					<input type="password" placeholder="Password" name="password" required="" id="password" />
				</div>
				<div>
					<input type="submit" value="Log in" />
					<a href="#">Lost your password?</a>
					<a href="#">Register</a>
				</div>
			</form><!-- form -->
		</section><!-- content -->
	</div><!-- container -->
{% endblock %}
{% block javascripts %}
	<script src="{{ asset('assets/login/js/index.js') }}"></script>
{% endblock %}